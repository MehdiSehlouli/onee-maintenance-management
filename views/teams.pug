extends personalstats.pug
block title
  title La Liste des équipes
block teams
 .add-people-header
            h6.header-title
            | La Liste des équipes
 for team in o
    .row.add-people-section
      .small-12.medium-6.columns.about-people
        .about-people-avatar
            img.avatar-image(src="/static/avatarmale.png" alt=`${team.name}`)
        .about-people-author
          p.author-name
            | #{team.name}
          for p in team.people
            p.author-role
                i.fa.fa-address-book-o(aria-hidden="true")
                | #{p}
          
        if team.active
            button.button.success.small
                i.fa.fa-circle(aria-hidden="true") Disponible
        else
            button.button.alert.small
                i.fa.fa-times(aria-hidden="true") En mission
